@inherits LayoutComponentBase

@using Jija.Models;
@using Jija.Services
@using System.Security.Claims
@using Microsoft.AspNetCore.Identity

@inject UserManager<User> UserManager
@inject SignInManager<User> SignInManager
@inject AuthStateService AuthStateService
@inject Blazored.LocalStorage.ILocalStorageService localStorage

<div class="sidebar">
    <NavMenu />
</div>

<div class="main">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <AuthorizeView>
                    <Authorized>
                        <a class="nav-link" href="/">@context.User.Identity.Name<span class="sr-only">(current)</span></a>
                        <a class="nav-link" href="/" @onclick="LogOut">Logout<span class="sr-only">(current)</span></a>
                    </Authorized>
                    <NotAuthorized>
                        <a href="/account/register" class="nav-link">Register</a>
                        <a href="/account/login" class="nav-link">Login</a>
                    </NotAuthorized>
                </AuthorizeView>
            </ul>
        </div>

    </nav>

    <div class="content px-4">
        @Body
    </div>

    @code {
        private async Task LogOut()
        {
            await localStorage.RemoveItemAsync("token");
            AuthStateService.SetAuthenticationState(Task.FromResult(new AuthenticationState(new ClaimsPrincipal(new ClaimsIdentity()))));
            AuthStateService.NotifyStateChanged();
        }
    }

</div>